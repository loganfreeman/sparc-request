%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} Sparc Request
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.dashboard
          = link_to 'Dashboard', portal_root_path, target: '_blank'
        %li.admin
          = link_to 'SPARCAdmin', portal_admin_path, target: '_blank'
        %li.fulfillment
          = link_to 'SPARCFulfillment', CLINICAL_WORK_FULFILLMENT_URL, target: '_blank'
        %li.catalog
          = link_to 'SPARCCatalog', catalog_manager_catalog_index_path, target: '_blank'
        %li.reports
          = link_to 'SPARCReport', reports_path, target: '_blank'
      %ul.nav.navbar-nav.navbar-right
        %li
          - flash.each do |name, msg|
            = content_tag :span, msg, :id => "flash_#{name}" if msg.is_a?(String)
        - if current_user.present?
          %li
            = content_tag :span, "Logged in as #{current_user.first_name} #{current_user.last_name}"
          %li
            = link_to 'Logout', destroy_identity_session_path, method: :delete, class: 'logout'
        - else
          %li
            = link_to 'Login', new_identity_session_path, class: 'logout'
